{
  "compilerOptions": {
    "paths": {
      "lib/*": ["./_shared/*"],
      "functions/*": ["./*"]
    },
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "types": [
      "https://esm.sh/@supabase/functions-js@2.4.1/src/edge-runtime.d.ts"
    ]
  },
  "include": ["**/*.ts"]
}
